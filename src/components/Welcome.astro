<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#container {
		font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova",
			"Nimbus Sans", Arial, sans-serif;
		height: 100%;
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
	}

	#hero {
		display: flex;
		align-items: start;
		flex-direction: column;
		justify-content: center;
		padding: 16px;
	}

	h1 {
		font-size: 28px;
		margin-top: 0.25em;
	}

	#links {
		display: flex;
		gap: 16px;
	}

	#links a {
		display: flex;
		align-items: center;
		padding: 10px 12px;
		color: #111827;
		text-decoration: none;
		transition: color 0.2s;
	}

	#links a:hover {
		color: rgb(78, 80, 86);
	}

	#links a svg {
		height: 1em;
		margin-left: 8px;
	}

	#links a.button {
		color: white;
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		box-shadow:
			inset 0 0 0 1px rgba(255, 255, 255, 0.12),
			inset 0 -2px 0 rgba(0, 0, 0, 0.24);
		border-radius: 10px;
	}

	#links a.button:hover {
		color: rgb(230, 230, 230);
		box-shadow: none;
	}

	.section-title {
		text-align: center;
		font-size: 24px;
		margin: 40px 0 20px;
	}

	.hosts-container {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 20px;
		padding: 0 16px;
		max-width: 1200px;
		margin: 0 auto;
	}

	.host-card {
		width: 250px;
		padding: 20px;
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}

	.host-image {
		width: 150px;
		height: 150px;
		border-radius: 50%;
		background-size: cover;
		background-position: center;
		margin-bottom: 15px;
	}

	.stephen {
		background-image: url('https://redmonk.com/wp-content/uploads/2020/04/stephen-ogrady-headshot-2020-square-1024x1024.jpg');
	}

	.james {
		background-image: url('https://redmonk.com/wp-content/uploads/2020/04/james-governor-headshot-2020-square-1024x1024.jpg');
	}

	.rachel {
		background-image: url('https://redmonk.com/wp-content/uploads/2020/04/rachel-stephens-headshot-2020-square-1024x1024.jpg');
	}

	.kate {
		background-image: url('https://redmonk.com/wp-content/uploads/2020/04/kate-holterhoff-headshot-2020-square-1024x1024.jpg');
	}

	.host-card h3 {
		margin: 0 0 10px;
		font-size: 18px;
	}

	.host-card p {
		margin: 0 0 15px;
		font-size: 14px;
		line-height: 1.4;
	}

	.social-links {
		display: flex;
		gap: 15px;
		justify-content: center;
		margin-top: 10px;
	}

	.social-links a {
		color: #3245ff;
		transition: color 0.2s;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.social-links a:hover {
		color: #bc52ee;
	}
	
	.ellipsis {
		color: #3245ff;
		font-weight: bold;
	}
	
	.read-more {
		color: #3245ff;
		text-decoration: none;
		font-size: 14px;
		font-weight: 500;
	}
	
	.read-more:hover {
		text-decoration: underline;
	}

	#hosts-section {
		padding: 20px 0 40px;
	}

	.box {
		background: rgba(255, 255, 255, 0.9);
		border-radius: 16px;
		border: 1px solid white;
		transition: transform 0.2s, box-shadow 0.2s;
	}

	.box:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
	}

	@media screen and (max-width: 768px) {
		#container {
			display: flex;
			flex-direction: column;
		}

		#hero {
			display: block;
			padding-top: 10%;
		}

		#links {
			flex-wrap: wrap;
		}

		#links a.button {
			padding: 14px 18px;
		}

		h1 {
			line-height: 1.5;
		}

		.hosts-container {
			flex-direction: column;
			align-items: center;
		}

		.host-card {
			width: 100%;
			max-width: 300px;
		}
	}
</style>

<script>
	const fullBios = {
		stephen: 'Co-founder of RedMonk. Focuses on developers and the products/services they use. Stephen is a recognized industry expert on developer trends and attitudes. His work combines quantitative data with qualitative insights to help companies understand and engage with developers effectively.',
		james: 'Co-founder of RedMonk. Industry analyst covering software development, DevOps, and sustainability. James brings decades of experience analyzing technology trends and advising enterprises on developer-focused strategies and sustainable technology practices.',
		rachel: 'Senior Analyst at RedMonk. Focuses on the business of software development and cloud economics. Rachel specializes in analyzing the financial implications of cloud adoption and helping organizations optimize their technology investments.',
		kate: 'Analyst at RedMonk. Focuses on developer experience, AI, and software development trends. Kate brings a unique perspective on emerging technologies and their impact on developer workflows and productivity.'
	};

	function handleClick(e) {
		e.preventDefault();
		const link = e.target;
		const card = link.closest('.host-card');
		const bio = card.querySelector('p');
		const image = card.querySelector('.host-image');
		let key = Object.keys(fullBios).find(k => image.classList.contains(k));
		
		if (link.textContent === 'Read more') {
			bio.innerHTML = `${fullBios[key]} <a href="#" class="read-more">Show less</a>`;
		} else {
			const short = fullBios[key].split(' ').slice(0, 10).join(' ');
			bio.innerHTML = `${short}<span class="ellipsis">...</span> <a href="#" class="read-more">Read more</a>`;
		}
		
		bio.querySelector('.read-more').addEventListener('click', handleClick);
	}

	document.querySelectorAll('.read-more').forEach(link => {
		link.addEventListener('click', handleClick);
	});
</script>