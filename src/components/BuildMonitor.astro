---
// Build Monitor Component - Shows build status and performance metrics
export interface Props {
  showInProduction?: boolean;
  position?: 'top-right' | 'top-left' | 'bottom-right' | 'bottom-left';
  compact?: boolean;
}

const { 
  showInProduction = false, 
  position = 'bottom-right',
  compact = true 
} = Astro.props;

// Only show in development or when explicitly enabled
const shouldShow = import.meta.env.DEV || showInProduction;

let buildInfo;
let buildStrategy = 'unknown';
let episodeCount = 0;
let lastBuildTime = 'Unknown';
let cacheHitRate = 0;

if (shouldShow) {
  try {
    // Try to get build information from incremental service
    const { getBuildInfo } = await import('../services/incrementalRss.js');
    buildInfo = await getBuildInfo();
    buildStrategy = buildInfo.cacheStats.buildStrategy;
    episodeCount = buildInfo.cacheStats.totalEpisodes;
    lastBuildTime = new Date(buildInfo.cacheStats.lastFullBuild).toLocaleTimeString();
    cacheHitRate = buildInfo.cacheStats.cacheHitRate;
  } catch (error) {
    console.warn('Build monitor: Unable to fetch build info');
  }
}

const positionClasses = {
  'top-right': 'top-4right-4',
  'top-left': 'top-4 left-4',
  'bottom-right': 'bottom-4 right-4',
  'bottom-left': 'bottom-4 left-4'
};
---

{shouldShow && (
  <div 
    class={`build-monitor fixed ${positionClasses[position]} z-50${
      compact ? 'w-64' : 'w-80'
    }`}
    id="build-monitor"
  >
    <div class="bg-gray-900 text-white rounded-lg shadow-lg border border-gray-700 overflow-hidden">
      <div class="px-3 py-2 bg-gray-800 border-b border-gray-700 flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div class={`w-2 h-2 rounded-full ${
            buildStrategy === 'full' ? 'bg-blue-500' :
            buildStrategy === 'incremental' ? 'bg-green-500' :
            buildStrategy === 'paginated' ? 'bg-yellow-500' : 'bg-gray-500'
          }`}></div>
          <span class="text-sm font-medium">Build Monitor</span>
        </div>
        <button 
          class="text-gray-400 hover:text-white text-sm"
          onclick="toggleBuildMonitor()"
          aria-label="Toggle build monitor"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 02424">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M618L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      
      <div class="p-3 space-y-2 text-xs">
        <div class="flex justify-between">
          <span class="text-gray-400">Strategy:</span>
          <span class="font-mono capitalize">{buildStrategy}</span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-400">Episodes:</span>
          <span class="font-mono">{episodeCount}</span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-400">Cache Hit:</span>
          <span class="font-mono">{cacheHitRate}%</span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-400">Last Build:</span>
          <span class="font-mono text-xs">{lastBuildTime}</span>
        </div>
        
        {!compact && (
          <>
            <div class="border-t border-gray-700 pt-2 mt-2">
              <div class="text-gray-400 text-xs mb-1">Build Performance</div>
              <div class="bg-gray-800 rounded-full h-2">
                <div 
                  class={`h-2 rounded-full ${
                    cacheHitRate > 80 ? 'bg-green-500' :
                    cacheHitRate > 50 ? 'bg-yellow-500' : 'bg-red-500'
                  }`}
                  style={`width: ${cacheHitRate}%`}
                ></div>
              </div>
            </div>
            
            <div class="flex gap-1 pt-1">
              <button 
                class="flex-1 bg-gray-700 hover:bg-gray-600 text-xs py-1 px-2rounded"
                onclick="refreshBuildInfo()"
              >
                Refresh
              </button>
              <button 
                class="flex-1 bg-blue-600 hover:bg-blue-500 text-xs py-1 px-2 rounded"
                onclick="showBuildStats()"
              >
                Stats
              </button>
            </div>
          </>
        )}
      </div>
    </div>
  </div>
)}

<style>
  .build-monitor {
    font-family: system-ui, -apple-system, sans-serif;
    transition: opacity 0.2s ease-in-out;
  }
  
  .build-monitor.hidden {
    opacity: 0;
    pointer-events: none;
  }
</style>

<script>
  // Build monitor functionality
  function toggleBuildMonitor() {
    const monitor = document.getElementById('build-monitor');
    if (monitor) {
      monitor.classList.toggle('hidden');
      localStorage.setItem('build-monitor-hidden', monitor.classList.contains('hidden').toString());
    }
  }
  
  function refreshBuildInfo() {
    window.location.reload();
  }
  
  function showBuildStats() {
    // Create a modal with detailed build statistics
    const modal = document.createElement('div');
    modal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50';
    modal.innerHTML = `
      <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
        <h3 class="text-lg font-bold mb-4">Build Statistics</h3>
        <div class="space-y-2 text-sm">
          <div class="flex justify-between">
            <span>Build Strategy:</span>
            <span class="font-mono">${document.querySelector('.build-monitor [class*="bg-"]:first-child').nextElementSibling.textContent}</span>
          </div>
          <div class="flex justify-between">
            <span>Total Episodes:</span>
            <span class="font-mono">${document.querySelector('.build-monitor').textContent.match(/Episodes:\s*(\d+)/)?.[1] || 'N/A'}</span>
          </div>
          <div class="flex justify-between">
            <span>Environment:</span>
            <span class="font-mono">${import.meta.env.DEV ? 'Development' : 'Production'}</span>
          </div>
        </div>
        <div class="mt-6 flex justify-end">
          <button 
            class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded"
            onclick="this.closest('.fixed').remove()"
          >
            Close
          </button>
        </div>
      </div>
    `;
    
    document.body.appendChild(modal);
    
    // Close on backdrop click
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.remove();
      }
    });
  }
  
  // Restore monitor visibility from localStorage
  document.addEventListener('DOMContentLoaded', () => {
    const monitor = document.getElementById('build-monitor');
    const isHidden = localStorage.getItem('build-monitor-hidden') === 'true';
    
    if (monitor && isHidden) {
      monitor.classList.add('hidden');
    }
  });
  
  // Make functions globally available
  window.toggleBuildMonitor = toggleBuildMonitor;
  window.refreshBuildInfo = refreshBuildInfo;
  window.showBuildStats = showBuildStats;
</script>