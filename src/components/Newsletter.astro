          <label for="bd-email" class="sr-only">Enter your email</label>
          <input
            type="email"
            name="email"
            id="bd-email"
            placeholder="Enter your email"
            class="w-full px-4 py-2 rounded-md border border-gray-300 focus:ring-2 focus:ring-primary-300 focus:border-primary-300 focus:outline-none transition-all"
          />
        </div>
        <input
          type="submit"
          value="Subscribe"
          class="btn btn-primary px-4 py-2 rounded-md cursor-pointer border border-white"
