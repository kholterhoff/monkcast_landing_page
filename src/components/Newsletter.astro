<section
  class="relative bg-gradient-animate py-16 overflow-hidden"
>
  <div class="container mx-auto px-4">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,_var(--tw-gradient-stops))] from-accent-500/20 via-transparent to-transparent"></div>
    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] aspect-[2/1] rounded-full bg-[radial-gradient(circle,_rgba(0,0,0,0.5)_0%,_rgba(0,0,0,0)_70%)] blur-sm"></div>
    <div class="max-w-2xl mx-auto text-center text-white relative z-10 [text-shadow:_0_1px_2px_rgba(0,0,0,0.8)]">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">
        Can't Get Enough of the Monks?
      </h2>
      <p class="text-white mb-8">Subscribe to the RedMonk Newsletter!</p>

      <form
        action="https://buttondown.com/api/emails/embed-subscribe/redmonk"
        method="post"
        target="popupwindow"
        onsubmit="window.open('https://buttondown.com/redmonk', 'popupwindow')"
