---
import applePodcast from "../assets/platforms/apple Podcast.png";
import spotify from "../assets/platforms/spotify.png";
import googlePodcasts from "../assets/platforms/Google_Podcasts_icon.png";
import pocketCasts from "../assets/platforms/Pocket_Casts_icon.svg.png";
import overcast from "../assets/platforms/overcast.png";
import rss from "../assets/platforms/rss_logo.png";
---

<section class="py-12 bg-gray-50">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-2xl md:text-3xl font-bold mb-8 text-secondary-900">
      Listen on Your Favorite Platform
    </h2>

    <div
      class="grid grid-cols-3 sm:grid-cols-3 md:grid-cols-5 gap-4 md:gap-6 max-w-4xl mx-auto justify-center"
    >
      <!-- Apple Podcasts -->
      <a
        href="https://podcasts.apple.com/us/podcast/the-monkcast/id1712805847"
        target="_blank"
        rel="noopener noreferrer"
        class="flex flex-col items-center gap-3 p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow"
      >
        <img
          src={applePodcast.src}
          alt="Apple Podcasts"
          width="40"
          height="40"
        />
        <span class="font-medium text-secondary-800">Apple</span>
      </a>

      <!-- Spotify -->
      <a
        href="https://open.spotify.com/show/1lzmSLf4O2trpJApYOBeVC"
        target="_blank"
        rel="noopener noreferrer"
        class="flex flex-col items-center gap-3 p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow"
      >
        <img src={spotify.src} alt="Spotify" width="40" height="40" />
        <span class="font-medium text-secondary-800">Spotify</span>
      </a>

      <!-- Pocket Casts -->
      <a
        href="https://pocketcasts.com/discover/podcast/9123d1b0-512d-013c-9eb7-0acc26574db2"
        target="_blank"
        rel="noopener noreferrer"
        class="flex flex-col items-center gap-3 p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow"
      >
        <img src={pocketCasts.src} alt="Pocket Casts" width="40" height="40" />
        <span class="font-medium text-secondary-800">Pocket Casts</span>
      </a>

      <!-- Overcast -->
      <a
        href="https://overcast.fm/itunes/monkcast"
        target="_blank"
        rel="noopener noreferrer"
        class="flex flex-col items-center gap-3 p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow"
      >
        <img src={overcast.src} alt="Overcast" width="40" height="40" />
        <span class="font-medium text-secondary-800">Overcast</span>
      </a>

      <!-- RSS -->
      <a
        href="https://www.podserve.fm/series/rss/8338/the-monkcast.rss"
        target="_blank"
        rel="noopener noreferrer"
        class="flex flex-col items-center gap-3 p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow"
      >
        <img src={rss.src} alt="RSS Feed" width="40" height="40" />
        <span class="font-medium text-secondary-800">RSS</span>
      </a>
    </div>
  </div>
</section>
