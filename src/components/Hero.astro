---
import { Image } from "astro:assets";
import monkcastLogo from "../assets/monkcast_logo.png";
import redmonkLogo from "../assets/redmonk_logo.png";

const { podcast } = Astro.props;
---

<section
  class="relative bg-gradient-to-br from-black via-secondary-900 to-secondary-800 text-white py-12 md:py-24 overflow-hidden"
>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-primary-500/20 via-primary-500/10 to-transparent"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_left,_var(--tw-gradient-stops))] from-accent-500/20 via-transparent to-transparent"></div>
  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-6 lg:gap-16">
      <div class="w-full lg:w-1/2 text-center lg:text-left">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-3 md:mb-4 leading-tight">
          The <span class="text-primary-400" style="color: #fe0000;">MonkCast</span>
        </h1>
        <div class="flex items-center gap-1 justify-center lg:justify-start">
          <span style="color: #fe0000; font-weight: 900;font-size: 18px;">A</span>
          <img
            src={redmonkLogo.src}
            alt="RedMonk"
            style="height: 30px; width: auto;"
            loading="eager"
          />
          <span style="color: #fe0000; font-weight: 900;font-size: 18px;">Production</span>
        </div>
        <p class="text-lg sm:text-xl md:text-2xl mb-4 md:mb-6 text-gray-200">
          Technology analysis and insights from the RedMonk team
        </p>
        <p class="text-gray-300 mb-6 md:mb-8 max-w-xl mx-auto lg:mx-0">
          Join us for in-depth conversations with technology thought leaders,
          industry experts, and the RedMonk analysts as we explore the
          intersection of technology, business, and culture.
        </p>
        <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
          <a
            href="#episodes"
            class="btn btn-primary px-5 py-2 md:px-6 md:py-3 rounded-md focus:ring-2 focus:ring-primary-300 focus:outline-none text-sm md:text-base"
          >
            <span>Latest Episodes</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2"><path d="m9 18 6-6-6-6"/></svg>
          </a>
        </div>
      </div>
      <div class="w-full lg:w-1/2 flex justify-center mt-6 lg:mt-0">
        <div
          class="relative w-56 h-56 sm:w-64 sm:h-64 md:w-80 md:h-80 rounded-full overflow-hidden shadow-2xl border-4 border-white/20 hover-lift backdrop-blur-sm bg-white/5 floating-animation"
        >
          <img
            src={monkcastLogo.src}
            alt="The MonkCast Podcast Cover"
            width="320"
            height="320"
            class="w-full h-full object-contain"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-7.5px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .floating-animation {
    animation: float 6s ease-in-out infinite;
  }
</style>
