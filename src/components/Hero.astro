---
import { Image } from 'astro:assets';

const { podcast } = Astro.props;
---

<section class="relative bg-gradient-to-br from-secondary-900 to-secondary-800 text-white py-16 md:py-24 overflow-hidden">
  <div class="absolute inset-0 opacity-10">
    <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" viewBox="0 0 512 512">
      <path fill="currentColor" d="M71.5 34.25c-6.6 .2-13.5 2.4-18.6 7.6l-3.2 3.5c-7.4 8.2-7 20.1 1.5 28.6l275 287.4c8 8.2 21.1 8.7 29.5 .8l3.5-3.4c8.1-7.5 8.5-20.3 1.1-28.4L83.8 43.4C80.3 39.8 76 37.5 71.5 34.25zm59.4 54.85c-8.6 .1-16.6 3.7-22.4 9.9l-3.1 3.4c-7.2 8.3-6.6 21.1 1.2 28.6l167.2 159.5c7.9 7.6 20.2 7.3 27.7-.7l2.9-3.2c7.1-7.7 7.1-19.7 0-27.4L137.6 98.8c-1.9-1.8-4-3.3-6.2-4.5c-4.9-3-11.3-5.05-17.4-5.05c-.2 0-.5 0-.7 0c-2.9 0-5.4 .2-7.9 .7c0 0-4.9 .2-9.5 2.3c-5.3 2.4-9.4 5.7-12.5 8.6c-8.4 8-8.1 20.2 .7 28.5l167.9 171.7c7.8 8 20.7 8.1 28.7 .3l14.9-15.5c7.8-8.2 7.8-20.9 0-29.1L138.6 98c-2.2-2.2-4.8-4-7.7-5z"/>
    </svg>
  </div>
  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-16">
      <div class="w-full lg:w-1/2">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 leading-tight">
          The <span class="text-primary-400">MonkCast</span>
        </h1>
        <p class="text-xl md:text-2xl mb-6 text-gray-200">Technology analysis and insights from the RedMonk team</p>
        <p class="text-gray-300 mb-8 max-w-xl">
          Join us for in-depth conversations with technology thought leaders, industry experts, and the RedMonk analysts as we explore the intersection of technology, business, and culture.
        </p>
        <div class="flex flex-wrap gap-4">
          <a 
            href="#episodes" 
            class="bg-primary-500 text-white px-6 py-3 rounded-md hover:bg-primary-600 transition-colors focus:ring-2 focus:ring-primary-300 focus:outline-none"
          >
            Latest Episodes
          </a>
          <a 
            href="#subscribe" 
            class="bg-transparent text-white border border-white px-6 py-3 rounded-md hover:bg-white/10 transition-colors focus:ring-2 focus:ring-primary-300 focus:outline-none"
          >
            Subscribe Now
          </a>
        </div>
      </div>
      <div class="w-full lg:w-1/2 flex justify-center">
        <div class="relative w-64 h-64 md:w-80 md:h-80 rounded-full overflow-hidden shadow-2xl border-4 border-white/20 hover-lift">
          {podcast?.image && (
            <img 
              src={podcast.image} 
              alt="The MonkCast Podcast Cover" 
              width="320" 
              height="320" 
              class="w-full h-full object-cover"
            />
          )}
          {!podcast?.image && (
            <div class="w-full h-full bg-primary-500 flex items-center justify-center">
              <span class="text-4xl font-bold text-white">MonkCast</span>
            </div>
          )}
          <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent flex items-end justify-center pb-6">
            <div class="flex gap-2">
              <span class="bg-white text-secondary-900 rounded-full w-10 h-10 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="5 3 19 12 5 21 5 3"/></svg>
              </span>
              <span class="bg-white text-secondary-900 rounded-full w-10 h-10 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 19V5"/><path d="M5 12l7-7 7 7"/></svg>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>