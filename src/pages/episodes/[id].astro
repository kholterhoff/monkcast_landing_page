---
import Layout from "../../layouts/Layout.astro";
// import PodcastPlayer from "../../components/PodcastPlayer.astro"; // Removed - Riverside doesn't provide embeddable player
import ErrorBoundary from "../../components/ErrorBoundary.astro";
import { fetchPodcastFeed, PODCAST_RSS_URL } from "../../services/rss";
import type { Episode, Podcast } from "../../types";

export async function getStaticPaths() {
  try {
    // Check if we're in an incremental build mode
    const buildStrategy = process.env.BUILD_STRATEGY || 'full';
    const maxEpisodes = process.env.MAX_EPISODES_PER_BUILD ? 
      parseInt(process.env.MAX_EPISODES_PER_BUILD, 10) : 
      undefined;
    
    console.log(`ðŸ”¨ Building episodes with strategy: ${buildStrategy}`);
    
    let podcast;
    
    // Use incremental RSS service if available and in incremental mode
    if (buildStrategy !== 'full') {
      try {
        const { fetchPodcastFeedIncremental } = await import('../../services/incrementalRss.ts');
        const result = await fetchPodcastFeedIncremental(false);
        podcast = result.podcast;
        console.log(`ðŸ“¦ Incremental build: ${result.episodes.length} episodes processed`);
      } catch (incrementalError) {
        console.warn('âš ï¸  Incremental service failed, falling back to regular fetch');
        podcast = (await fetchPodcastFeed(PODCAST_RSS_URL)) as Podcast;
      }
    } else {
      podcast = (await fetchPodcastFeed(PODCAST_RSS_URL)) as Podcast;
    }

    // Validate podcast data
    if (!podcast || !podcast.episodes || !Array.isArray(podcast.episodes)) {
      console.error('Invalid podcast data structure');
      return [];
    }

    let episodesToBuild = podcast.episodes;

    // Apply build strategy limitations
    if (buildStrategy === 'incremental' && maxEpisodes) {
      // For incremental builds, prioritize recent episodes
      episodesToBuild = podcast.episodes
        .sort((a, b) => new Date(b.pubDate || 0).getTime() - new Date(a.pubDate || 0).getTime())
        .slice(0, maxEpisodes);
      
      console.log(`ðŸ”„ Incremental: Building ${episodesToBuild.length}/${podcast.episodes.length} episodes`);
    } else if (buildStrategy === 'paginated') {
      // For paginated builds, build specific batch
      const currentBatch = parseInt(process.env.CURRENT_BATCH || '1', 10);
      const totalBatches = parseInt(process.env.TOTAL_BATCHES || '1', 10);
      const episodesPerBatch = parseInt(process.env.EPISODES_PER_BATCH || '50', 10);
      
      const startIndex = (currentBatch - 1) * episodesPerBatch;
      const endIndex = startIndex + episodesPerBatch;
      
      episodesToBuild = podcast.episodes.slice(startIndex, endIndex);
      
      console.log(`ðŸ“„ Paginated: Building batch ${currentBatch}/${totalBatches} (${episodesToBuild.length} episodes)`);
    }

    return episodesToBuild
      .filter((episode: Episode) => {
        // Filter out invalid episodes
        return episode && episode.title && (episode.guid || episode.title);
      })
      .map((episode: Episode) => {
        // Ensure guid is not null or undefined
        const guid =
          episode.guid ||
          `episode-${Date.now()}-${Math.random().toString(36).substring(2, 9)}`;

        return {
          params: { id: guid },
          props: { episode, podcast },
        };
      });
  } catch (error) {
    console.error('Error generating static paths for episodes:', error);
    
    // Return empty array to prevent build failure
    // Individual episode pages will show error boundaries
    return [];
  }
}

interface Props {
  episode: Episode;
  podcast: Podcast;
}

const { episode, podcast } = Astro.props as Props;

// Validate episode data
const isValidEpisode = episode && episode.title && episode.guid;
const hasAudioContent = episode?.enclosure?.url || episode?.link;

// Fallback data for missing information
// Ensure image is always a string (RSS parser may return an object like {href: "..."})
const rawImage = episode?.image;
const imageUrl = typeof rawImage === 'string' ? rawImage
  : (rawImage && typeof rawImage === 'object' && 'href' in rawImage) ? String((rawImage as any).href)
  : (rawImage && typeof rawImage === 'object' && 'url' in rawImage) ? String((rawImage as any).url)
  : '';

const safeEpisode = {
  title: episode?.title || 'Episode Title Unavailable',
  summary: episode?.summary || episode?.contentSnippet || 'Episode description not available.',
  content: episode?.content || episode?.summary || 'Episode content not available.',
  image: imageUrl || podcast?.image || 'https://redmonk.com/wp-content/uploads/2018/07/Monkchips-1.jpg',
  formattedDate: episode?.formattedDate || 'Date unavailable',
  episodeNumber: episode?.episodeNumber || '',
  guid: episode?.guid || 'unknown',
  redmonkUrl: episode?.redmonkUrl || '',
  link: episode?.link || '',
  enclosureUrl: episode?.enclosure?.url || '',
  duration: episode?.duration || '',
};
---

