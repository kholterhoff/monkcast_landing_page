  {!isValidEpisode && (
    <div class="container mx-auto px-4 py-8">
      <ErrorBoundary 
        fallback="This episode could not be loaded. The episode may have been moved or is temporarily unavailable."
        showRetry={true}
        context="episode"
        errorType="data"
      />
    </div>
  )}

